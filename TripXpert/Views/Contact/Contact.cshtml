@{
    ViewBag.Title = "Contact";
}
<div class="py-5"></div>
<div class="container">
    <div class="text-center tx-bottom-dash mb-5">
        <h1 class="h1">@ViewBag.Title</h1>
    </div>
    <div class="row">
        <div class="col-6 text-right">
            <p class="h4">Address</p>
            <p>
                33 Alexander Malinov blvd<br />
                1729 Sofia<br />
                Bulgaria
            </p>
        </div>
        <div class="col-6 text-left">
            <p class="h4">Phone &amp; Fax</p>
            <p>
                P: <a href="tel:+35928099850">+359 2 8099850</a><br />
                F: <a href="tel:+16172492116">+1 617 249 2116</a>
            </p>
            <span></span>
            <span></span>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-md-12">
            @(Html.Kendo().Map()
                .Name("map1")
                .Center(42, 23)
                .Zoom(6)
                .HtmlAttributes(new { @style = "width: 100%; height: 320px;" })
                .Layers(layers =>
                {
                    layers.Add()
                        .Type(MapLayerType.Tile)
                        .UrlTemplate("http://#= subdomain #.tile.openstreetmap.org/#= zoom #/#= x #/#= y #.png")
                        .Subdomains("a", "b", "c")
                        .Attribution("&copy; <a href='http://osm.org/copyright' title='OpenStreetMap contributors' target='_blank'>OpenStreetMap contributors</a>.");
                })
                .Markers(markers =>
                {
                    markers.Add()
                        .Location(42.650680, 23.379321)
                        .Shape(MapMarkersShape.PinTarget)
                        .Title("Sofia HQ")
                        .Tooltip(tooltip => tooltip.Content("33 Alexander Malinov Blvd, Sofia, Bulgaria"));
                })
            )
        </div>
    </div>
    <form id="feedbackForm">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="firstname">First Name*</label>
                <input id="firstname" name="firstname" type="text" class="form-control k-textbox" required />
            </div>
            <div class="form-group col-md-6">
                <label for="lastname">Last Name *</label>
                <input id="lastname" name="lastname" type="text" class="form-control k-textbox" required />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>Mobile*</label>
                @(Html.Kendo().MaskedTextBox()
                    .Name("mobile")
                    .Mask("(999) 000-0000")
                    .HtmlAttributes(new { @style = "width: 100%" })
                )
            </div>
            <div class="form-group col-md-6">
                <label>Where are you from*</label>
                @(Html.Kendo().DropDownList()
                    .Name("country")
                    .Height(192)
                    .OptionLabel("Select country")
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("GetCountries", "Contact");
                        });
                    })
                    .HtmlAttributes(new { @style = "width: 100%" })
                )
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <label for="comments">Comments *</label>
                <textarea name="comments" class="form-control k-textbox" cols"20" rows="20" required></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button class="k-button k-primary" type="submit">Send</button>
            </div>
        </div>
    </form>
</div>

<script>
$(document).ready(function () {
    var validator = $("#feedbackForm").kendoValidator().data("kendoValidator");
    $("#feedbackForm").submit(function (event) {
        event.preventDefault();
        if (validator.validate()) {
            kendo.alert("Thank you for your feedback!");
        } 
    });
});
</script>